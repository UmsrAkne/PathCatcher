<Window
    x:Class="PathCatcher.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:PathCatcher.Models"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:utils="clr-namespace:PathCatcher.Utils"
    xmlns:viewModels="clr-namespace:PathCatcher.ViewModels"
    Title="{Binding Title}"
    Width="1024"
    Height="350"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Window.Resources>
        <utils:LeftEllipsisConverter x:Key="LeftEllipsisConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ListBox
            Grid.Row="0"
            Grid.Column="0"
            Background="AntiqueWhite"
            ItemsSource="{Binding DirectoryPaths}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type system:String}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Converter={StaticResource LeftEllipsisConverter}, ConverterParameter=50}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border
            Grid.Row="0"
            Grid.Column="1"
            Background="LightBlue">
            <ListBox x:Name="HistoryListBox" ItemsSource="{Binding Histories}">

                <ListBox.InputBindings>
                    <KeyBinding
                        Key="C"
                        Command="{Binding CopyFromHistoryCommand}"
                        CommandParameter="{Binding ElementName=HistoryListBox, Path=SelectedItem}"
                        Modifiers="Control" />
                </ListBox.InputBindings>

                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:CopyHistory}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="10,0" Text="{Binding DateTime, StringFormat=HH:mm:ss}" />
                            <TextBlock Text="{Binding FilePath, Converter={StaticResource LeftEllipsisConverter}, ConverterParameter=50}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <TextBlock Margin="5" Text="Enter the full path of the directory to monitor :" />

            <TextBox Margin="5,0" Text="{Binding PendingPath, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel
                Margin="5"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Padding="20,3"
                    Command="{Binding AddDPathCommand}"
                    Content="Add directory" />
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>